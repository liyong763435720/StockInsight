# StockInsight 日志轮转配置
# 放置位置: /etc/logrotate.d/stock-insight

/opt/stock-insight/*.log {
    daily
    rotate 7
    compress
    delaycompress
    missingok
    notifempty
    create 0644 www-data www-data
    sharedscripts
    postrotate
        systemctl reload stock-insight > /dev/null 2>&1 || true
    endscript
}

